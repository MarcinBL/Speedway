<h1>Edycja Zawodnika</h1>
 <%= form_for :rider, url: rider_path(@rider), method: :patch do |f| %>
   
   <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
  
  
  <p>
    <%= f.label :age %><br>
    <%= f.text_area :age %>
  </p>
  <p>
      <%= f.label :photo %><br>
      <%= f.file_field :photo %>
  </p>

   <p>
    <%= f.submit %>
  </p>
   <% end %>
 <%= link_to 'Back', riders_path %>
